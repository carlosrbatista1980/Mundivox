@using System.Drawing
@using System.Runtime.InteropServices
@using System.Security.Cryptography.X509Certificates
@using WebApplication3.Controllers
@{
    ViewBag.Title = "Home Page";
}

@model WebApplication3.Models.Torneio

@{
    
}


<div class="jumbotron" style="height: 500px">

    <div class="round r-of-4">
        <div class="bracket-game">
            <div class="player top win">
                @Model.T1
                <div class="score">
                    @Model.T1score
                </div>
            </div>
            <div class="player bot loss">
                @Model.T2
                <div class="score">
                    @Model.T2score
                </div>
            </div>
        </div>
        <div class="bracket-game cont">
            <div class="player top loss">
                @Model.T3
                <div class="score">
                    @Model.T3score
                </div>
            </div>
            <div class="player bot win">
                @Model.T4
                <div class="score">
                    @Model.T4score
                </div>
            </div>
        </div>
    </div>
    <div class="connectors r-of-2">
        <div class="top-line"></div>
        <div class="clear"></div>
        <div class="bottom-line"></div>
        <div class="clear"></div>
        <div class="vert-line"></div>
        <div class="clear"></div>
        <div class="next-line"></div>
        <div class="clear"></div>
    </div>
    <div class="round r-of-2">
        <div class="bracket-game">
            <div class="player top loss">
                @Model.WinnerK1
                <div class="score">
                    @Model.WinnerK1score
                </div>
            </div>
            <div class="player bot win">
                @Model.WinnerK2
                <div class="score">
                    @Model.WinnerK2score
                </div>
            </div>
        </div>
    </div>

    <div class="round r-of-3">
        <div class="bracket-game">
            <div class="player bot win">
                @Model.WinnerFinal 
                <div>
                    <img src="~/Content/trophy.png" style="width: 30px; height: 30px" />
                </div>
            </div>
        </div>
    </div>
    

</div>

